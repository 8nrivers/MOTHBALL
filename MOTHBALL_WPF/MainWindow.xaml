<Window x:Name="frmMenu" x:Class="MOTHBALL_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MOTHBALL_WPF"
        mc:Ignorable="d"
        Title="MOTHBALL" Height="720" Width="1280" Icon="assets/mbIcon.ico" MinWidth="1280" MinHeight="718" ResizeMode="CanMinimize">
    <Grid Background="#FF343338">
        <Image x:Name="imgMenuBG" HorizontalAlignment="Left" Height="720" Margin="0,-12,-1286,-17" VerticalAlignment="Top" Width="2560" Source="assets/menubg.png"/>
        <Image x:Name="imgTitle" HorizontalAlignment="Center" Height="320" Margin="318,80,320,290" VerticalAlignment="Center" Width="640" Source="assets/logo.png">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Image x:Name="imgStart" HorizontalAlignment="Left" Height="60" Margin="540,400,0,0" VerticalAlignment="Top" Width="180" Source="assets/start.png">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Image x:Name="imgExit" HorizontalAlignment="Left" Height="56" Margin="1186,24,0,0" VerticalAlignment="Top" Width="56" Source="assets/exit.png">
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
    </Grid>
</Window>
